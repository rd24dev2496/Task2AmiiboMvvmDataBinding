<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="amiiboViewModel"
            type="com.example.task2mvvmamiibo.viewmodel.ItemAmiiboViewModel"/>
    </data>
    <LinearLayout
        android:id="@+id/item_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/selectableItemBackground"
        android:onClick="@{amiiboViewModel::onItemClick}"
        android:padding="10dp">

        <TextView
            android:id="@+id/label_amiiboSeries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{amiiboViewModel.amiiboSeries}"
            android:textColor="@android:color/primary_text_light"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="mr gary allen"/>

        <TextView
            android:id="@+id/label_character"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{amiiboViewModel.character}"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="14sp"
            tools:text="0729-256-147"/>

        <TextView
            android:id="@+id/label_gameSeries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{amiiboViewModel.gameSeries}"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="14sp"
            tools:text="gary.allen@example.com"/>
        <TextView
            android:id="@+id/label_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{amiiboViewModel.head}"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="14sp"
            tools:text="gary.allen@example.com"/>
        <TextView
            android:id="@+id/label_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{amiiboViewModel.name}"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="14sp"
            tools:text="gary.allen@example.com"/>

    </LinearLayout>

</layout>
